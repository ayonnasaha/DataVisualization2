{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Proportional symbol map showing migrant populations in different countries for 2020.",
    "width": 800,
    "height": 400,
    "title":{
        "text": "Migrant Populations around the world",
        "fontSize": 20
    },
    
    "projection": {
      "type": "equalearth"
    },
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ayonnasaha/DataVisualization2/refs/heads/main/js/ne_110m_admin_0_countries.json", 
          "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"  
          }
        },
        "mark": {
          "type": "geoshape",
          "fill": "#eeeeee",
          "stroke": "#aaaaaa"
        },
        "encoding": {
          "tooltip": {"field": "properties.NAME", "type": "nominal"}
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ayonnasaha/DataVisualization2/refs/heads/main/data/migrant%20population%20worldwide%20cleaned.csv",  
          "format": {
            "type": "csv"
          }
        },
        "mark": {
          "type": "circle",
          "opacity": 0.7
        },
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size": {
            "field": "2020 (Million)",
            "type": "quantitative",
            "scale": {"domain": [1, 100], "range": [50, 8000]}
          },
  
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "2020 (Million)", "type": "quantitative", "title": "Population in 2020 (Million)"}
          ]
        }
      }
    ]
  }
  
