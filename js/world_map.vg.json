{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Migrant Population around the World",
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ayonnasaha/DataVisualization2/refs/heads/main/js/ne_110m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ayonnasaha/DataVisualization2/refs/heads/main/data/migrant%20population%20worldwide%20cleaned.csv",
          "format": {"type": "csv"}
        },
        "transform": [
          {
            "lookup": "ADMIN", 
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/ayonnasaha/DataVisualization2/refs/heads/main/data/migrant%20population%20worldwide%20cleaned.csv",
                "format": {"type": "csv"}
              },
              "key": "Country",
              "fields": ["2020 (Million)", "2020 (%)"]
            }
          }
        ],
        "mark": {
          "type": "circle",
          "tooltip": {"content": "data"}
        },
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size": {
            "field": "2020 (Million)",
            "type": "quantitative",
            "title": "Migrant Population (Million)",
            "scale": {"domain": [1, 50]}
          }
        }
      }
    ]
  }