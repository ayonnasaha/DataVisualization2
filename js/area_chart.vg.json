{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/ayonnasaha/DataVisualization2/refs/heads/main/data/Graph%201.1-%20proportion%20born%20overseas%20cleaned.csv"},
  "title":{
    "text":"Australian Population over the years",
    "fontSize":20
  },
  "height":250, "width":275,
  "transform": [
    {
      "fold": [
        "Australian-born",
        "Overseas-born"
      ],
      "as": ["series", "value"]
    }
  ],
  "selection": {
    "series_highlight": {
    "type": "multi",
    "fields": ["series"],
    "bind": "legend"
  }
},

  "mark": "area",
  "encoding": {
    "x": {
      "field": "Year", 
      "type": "temporal",
      "axis": {"format": "%Y", "title": "Year"}
    },
    "y": {
      "field": "value", 
      "type": "quantitative",
      "title": "Population (Millions)"
    },
    "color": {
      "field": "series",
      "type": "nominal",
      "title": "Category"
    },
    "opacity": {
    "condition": {"selection": "series_highlight", "value": 0.9},
    "value": 0.2
    },
    "tooltip": [
      {"field": "Year", "type": "temporal", "title": "Year", "format": "%Y"},
      {"field": "series", "type": "nominal", "title": "Category"},
      {"field": "value", "type": "quantitative", "title": "Value"}
    ]
  } 
}
